<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--定义所有Theme的基本属性-->
    <style name="AppCommonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--默认主题色-->
        <item name="themeColor">@color/md_teal_500</item>
        <!--ActionBar颜色-->
        <item name="colorPrimary">?attr/themeColor</item>
        <!--StatusBar颜色-->
        <item name="colorPrimaryDark">?attr/statusbarColor</item>
        <item name="colorAccent">?attr/themeColor</item>

        <!--默认状态栏颜色-->
        <item name="statusbarColor">@color/md_teal_700</item>
        <!--默认不适配，只有在19的时候在适配-->
        <item name="fitSystemWindows">false</item>
        <item name="menuHeaderHeight">165dip</item>
        <item name="menuHeaderPaddingTop">20dip</item>
        <item name="toolbarSize">@dimen/abc_action_bar_default_height_material</item>

        <!--timeline-->
        <item name="text_title">@color/text_100</item>
        <item name="text_subhead">@color/text_54</item>
        <item name="text_body">@color/text_80</item>
    </style>

    <!--Values-vxx之间的差异属性-->
    <style name="AppBaseTheme" parent="AppCommonTheme">
        <item name="android:selectableItemBackground">@drawable/selector_list_holo</item>
        <item name="MDbuttonSelector">@drawable/selector_list_holo</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="MainTheme" parent="AppTheme">

    </style>

    <style name="Profile" parent="AppTheme">
    </style>
</resources>