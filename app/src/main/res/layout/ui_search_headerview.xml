<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:paddingLeft="@dimen/spacing_normal" android:paddingRight="@dimen/spacing_normal">

    <TextView
        style="@style/TextSubhead" android:layout_width="wrap_content"
        android:layout_height="48dip" android:gravity="center_vertical" android:text="@string/search_user"/>

    <FrameLayout
        android:id="@+id/layUsers"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="150dip">

    </FrameLayout>

    <TextView
        style="@style/TextSubhead" android:layout_width="wrap_content"
        android:layout_height="48dip" android:gravity="center_vertical" android:text="@string/search_status"/>

</LinearLayout>