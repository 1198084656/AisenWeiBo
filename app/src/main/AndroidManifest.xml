<manifest package="org.aisen.weibo.sina" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 允许程序打开网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 允许程序访问Wi-Fi网络状态信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 允许程序改变Wi-Fi连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 允许写入sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 允许一个程序访问GPS信息 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 允许程序访问有关GSM网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 允许访问振动设备 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- 开机自启动 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application android:name=".base.MyApplication" android:allowBackup="true"
                 android:icon="@drawable/a_icon_b" android:label="@string/app_name">
        <!-- 启动界面 -->
        <activity android:name=".ui.activity.base.SplashActivity" android:screenOrientation="portrait"
                  android:theme="@style/AppBaseTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--首页-->
        <activity android:name=".ui.activity.base.MainActivity" android:screenOrientation="portrait"
                  android:theme="@style/MainTheme"/>
        <!--公共页-->
        <activity android:name=".ui.activity.base.SinaCommonActivity" android:screenOrientation="portrait"
                  android:theme="@style/AppBaseTheme"/>
    </application>

</manifest>
