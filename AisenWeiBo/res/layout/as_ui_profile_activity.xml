<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layContent" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
        </RelativeLayout>

        <include
            android:id="@id/layoutLoadFailed" layout="@layout/comm_lay_loadfailed" android:layout_width="match_parent" android:layout_height="match_parent"
            android:visibility="gone"/>

        <include
            android:id="@id/layoutLoading" layout="@layout/comm_lay_loading" android:layout_width="fill_parent" android:layout_height="fill_parent" android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">

        <View
            android:layout_width="0dip" android:layout_height="?attr/actionBarSize"
            android:background="#66ffffff"/>

        <View
            android:id="@+id/viewToolbar" android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" android:alpha="0"/>

        <include
            layout="@layout/comm_lay_toolbar" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>

